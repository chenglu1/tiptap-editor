{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./apps/demo/src/*"
      ],
      "@tiptap-editor/ui-primitives": ["./packages/ui-primitives/src"],
      "@tiptap-editor/nodes": ["./packages/nodes/src"],
      "@tiptap-editor/ui-components": ["./packages/ui-components/src"],
      "@tiptap-editor/hooks": ["./packages/hooks/src"],
      "@tiptap-editor/utils": ["./packages/utils/src"]
    }
  },
  "include": [
    "apps/demo/src/**/*",
    "packages/**/src/**/*"
  ]
}